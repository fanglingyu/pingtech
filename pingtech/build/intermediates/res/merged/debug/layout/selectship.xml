<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainmenu_bg_v"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:id="@+id/select_rang"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:text="查询范围："
                android:textColor="@color/white"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/select_ship_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/radio_btn_jh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radiobutton"
                    android:text="在港国际航行船舶"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radio_btn_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radiobutton"
                    android:text="涉外服务型船舶"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_ship_jianhu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="@string/shipname"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/selectship_name_jianhu"
                    android:layout_width="170dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_common"
                    android:gravity="top"
                    android:singleLine="true"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="船舶性质："
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/selectship_property_spinner"
                    android:layout_width="170dip"
                    android:layout_height="wrap_content"
                    android:focusable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="@string/matouname"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/selectship_matou_spinner"
                    android:layout_width="170dip"
                    android:layout_height="wrap_content"
                    android:focusable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="@string/boweiname"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/selectship_bowei_spinner"
                    android:layout_width="170dip"
                    android:layout_height="wrap_content"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_ship_shewai"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="@string/shipname"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/selectship_name_shewai"
                    android:layout_width="170dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_common"
                    android:gravity="top"
                    android:singleLine="true"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="船舶用途："
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/selectship_purpose_spinner"
                    android:layout_width="170dip"
                    android:layout_height="wrap_content"
                    android:focusable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="船东姓名："
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/selectship_master_shewai"
                    android:layout_width="170dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_common"
                    android:gravity="top"
                    android:singleLine="true"
                    android:textColor="@color/textcolor" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:src="@drawable/bigsepline" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/select_ship_submit"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_common"
            android:text="@string/select"
            android:textColor="@drawable/btn_textcolor"
            android:textSize="20sp" />
        <Button
            android:id="@+id/select_ship_slotcard"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/select_ship_submit"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_common"
            android:text="@string/slotcard"
            android:textColor="@drawable/btn_textcolor"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>