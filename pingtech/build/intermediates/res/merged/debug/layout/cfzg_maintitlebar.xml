<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/cfzg_titlebar_layout_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/cfzg_titlebar_textview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:paddingRight="10dip"
            android:textColor="#ff32e3c1"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/cfzg_titlebar_textview_batteries_img"
            android:layout_width="16dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@id/cfzg_titlebar_textview_time"
            android:src="@drawable/stat_sys_battery_95" />

        <TextView
            android:id="@+id/cfzg_titlebar_textview_batteries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/cfzg_titlebar_textview_batteries_img"
            android:gravity="center_vertical"
            android:text="100%"
            android:textColor="#ff32e3c1"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/cfzg_titlebar_layout_top"
        android:background="@drawable/main_header_bg_v" >

        <TextView
            android:id="@+id/current_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="40dip"
            android:text="aaaa"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cfzg_cyxx_list_title_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="20dip"
            android:gravity="center_vertical"
            android:text="000000"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>