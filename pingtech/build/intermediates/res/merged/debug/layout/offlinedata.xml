<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmenu_bg_v"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/offlinedata_layout_info"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:layout_margin="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/offlinedata_btn_download"
            style="@style/buttonstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offlinedata_download" />

        <TextView
            android:id="@+id/offlinedata_textview_state_info"
            style="@style/textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offlinedata_download_success"
            android:textSize="16sp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/offlinedata_probar_downloading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/offlinedata_layout_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/offlinedata_item_img"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/blue"
            android:visibility="gone" />

        <ListView
            android:id="@+id/offlinedata_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:cacheColorHint="#00000000"
            android:divider="@color/blue"
            android:dividerHeight="0dip"
            android:footerDividersEnabled="false"
            android:listSelector="#00000000"
            android:stackFromBottom="true" >
        </ListView>
    </LinearLayout>

</LinearLayout>