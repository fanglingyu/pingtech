<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/custom_dialog_layout_cn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/custom_dialog_czsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/custom_dialog_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cfzg_jjbj"
                android:textColor="@color/white"
                android:padding="10dip"
                android:textSize="25sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/custom_dialog_bottom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_dialog_czsm"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="20dip" >

            <Button
                android:id="@+id/custom_dialog_Confirm_en"
                android:layout_width="120dip"
                android:layout_height="45dip"
                android:layout_centerVertical="true"
                android:background="@drawable/cfzg_btn_all_comment"
                android:onClick="buttonClick"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <Button
                android:id="@+id/custom_dialog_Cancel_en"
                android:layout_width="120dip"
                android:layout_height="45dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/custom_dialog_Confirm_en"
                android:background="@drawable/cfzg_btn_all_comment"
                android:onClick="buttonClick"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="28sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:layout_below="@id/custom_dialog_bottom_layout" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/custom_dialog_layout_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/custom_dialog_czsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/custom_dialog_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cfzg_jjbj_en"
                android:textColor="@color/white"
                android:padding="10dip"
                android:textSize="25sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/custom_dialog_bottom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_dialog_czsm"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="20dip" >

            <Button
                android:id="@+id/custom_dialog_Confirm_en"
                android:layout_width="120dip"
                android:layout_height="45dip"
                android:layout_centerVertical="true"
                android:background="@drawable/cfzg_btn_all_comment"
                android:onClick="buttonClick"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <Button
                android:id="@+id/custom_dialog_Cancel_en"
                android:layout_width="120dip"
                android:layout_height="45dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/custom_dialog_Confirm_en"
                android:background="@drawable/cfzg_btn_all_comment"
                android:onClick="buttonClick"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="28sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:layout_below="@id/custom_dialog_bottom_layout" />
    </RelativeLayout>

</RelativeLayout>