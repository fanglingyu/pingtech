<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainmenu_bg_v"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Validation_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/Valid_results"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cardtypetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="@string/cardinfo"
                android:textColor="@color/TitleInfoTextColor"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="3dip"
            android:background="@drawable/bigsepline" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="@string/name"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detail_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="@string/sex"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detail_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="@string/country"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detail_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="@string/birthday"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detail_cardtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="@string/cardtype"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detail_cardnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="@string/cardnum"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detail_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="@string/unit"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detail_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="@string/office"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detail_sbk_zqdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="@string/zqdd"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/yxq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="@string/yxqx"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sdcb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="@string/xunjian_sdcb"
                android:textColor="@color/white"
                android:textSize="18sp" />
             <TextView
                android:id="@+id/detail_btpzmbly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="@string/btpzmbly"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/detail_pzmbly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="@string/btpzmbly"
                android:textColor="@color/red"
                android:visibility="gone"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/detail_cardphoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/cardphoto"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="3dip"
                android:layout_toRightOf="@+id/detail_cardphoto"
                android:scaleType="centerInside"
                android:src="@drawable/photo" >
            </ImageView>

            <ImageView
                android:id="@+id/imageView_network_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dip"
                android:layout_toRightOf="@+id/detail_cardphoto"
                android:scaleType="centerInside" >
            </ImageView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/xunjian_txjl_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xunjian_txjl"
                    android:textColor="@color/TitleInfoTextColor"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/bigsepline" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <View
                        android:id="@+id/listview_topline"
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/divider" />
                </LinearLayout>

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:cacheColorHint="#00000000"
                    android:divider="#00000000"
                    android:dividerHeight="0dip"
                    android:footerDividersEnabled="false"
                    android:listSelector="#00000000" >
                </ListView>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="3dip"
            android:background="@drawable/bigsepline" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnNoIDCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_common"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text="@string/manualinput"
                android:textColor="@drawable/btn_textcolor"
                android:textSize="13sp" >
            </Button>

            <Button
                android:layout_toRightOf="@id/btnNoIDCard"
                android:id="@+id/btnExceptionRegist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_common"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text="@string/Exception_regist"
                android:textColor="@drawable/btn_textcolor"
                android:textSize="13sp" >
            </Button>

            <Button
                android:id="@+id/btnScan"
                android:layout_toRightOf="@id/btnExceptionRegist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_common"
                android:onClick="zxingScanMethod"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text="@string/wpjc_erweimasaomiao"
                android:textColor="@drawable/btn_textcolor"
                android:textSize="13sp"
                android:visibility="gone" >
            </Button>

            <Button
                android:id="@+id/btn_add_image"
                android:layout_below="@id/btnNoIDCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="click"
                android:background="@drawable/btn_common"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:visibility="gone"
                android:text="@string/btn_add_image"
                android:textColor="@drawable/btn_textcolor"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>