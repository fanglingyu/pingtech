<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainmenu_bg_h"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/readcard_radio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:visibility="gone" >

        <RadioButton
            android:id="@+id/radio_btn_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="1.0dip"
            android:layout_weight="1.0"
            android:text="@string/xunjian_normal"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio_btn_id_guard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="1.0dip"
            android:layout_weight="1.0"
            android:text="@string/xunjian_chagangchashao"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio_btn_ic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="1.0dip"
            android:layout_weight="1.0"
            android:text="@string/xunjian_xunchadidian"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/berthcard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/iccardnum"
            android:textColor="@color/white"
            android:textSize="19sp" >
        </TextView>

        <Button
            android:id="@+id/btnsel"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_weight="0.7"
            android:text="@string/select_ship"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/cardtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_weight="0.3"
            android:singleLine="true" />

        <Button
            android:id="@+id/btnok"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_weight="0.7"
            android:text="@string/ok"
            android:textSize="19sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/hite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:text="提示：刷卡成功后无需任何操作，系统会自动查询并显示查询结果；手工输入完毕后请按确定按钮开始查询!"
        android:textColor="@color/white"
        android:textSize="19sp" >
    </TextView>

</LinearLayout>